@model WebApplicationCore.Models.Dish

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Dish</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.Tags)
        </dt>
        <dd>
            @if (Model.Tags != null)
            {
                foreach (var t in Model.Tags)
                {
                    @Html.DisplayFor(model => t.Tag.Name);<br />
                }
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Ingredients)
        </dt>
        <dd>
            @if (Model.Ingredients != null)
            {
                foreach (var t in Model.Ingredients)
                {
                    @Html.DisplayFor(model => t.Ingredient.Name);<span>&nbsp;</span>@Html.DisplayFor(model => t.Volume);<span>&nbsp;&nbsp;&nbsp;</span>@Html.DisplayFor(model => t.Ingredient.Calories);<span>Kkal in 100 gr</span><br />
                    <img src="@Url.Content(t.Ingredient.Image)" alt="Ingredient" width="200" /><br />
                }
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Image) <br />
            <img src="@Url.Content(Model.Image)" alt="Image" width="600" /><br />
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
